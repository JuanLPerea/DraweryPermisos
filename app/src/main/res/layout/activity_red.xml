<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RedActivity">

    <RadioGroup
        android:id="@+id/radio_group_red"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/tienes_internetRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIENES INTERNET"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/no_tienes_internetRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO TIENES INTERNET"
            android:onClick="onRadioButtonClicked"/>

    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/tiras_wifiRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIRAS DE WIFI"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/tirasRedRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIRAS DE RED MOVIL"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/tiras_otroRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIRAS DE OTRO"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/sym_def_app_icon" />
</LinearLayout>